<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManagerMenuController">
   <children>
      <VBox>
         <children>
            <HBox prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to right, #000428, #004e92);">
               <children>
                  <BorderPane prefHeight="100.0" prefWidth="200.0">
                     <center>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                           <image>
                              <Image url="@../../asset/car.png" />
                           </image>
                        </ImageView>
                     </center>
                  </BorderPane>
                  <HBox prefHeight="100.0" prefWidth="225.0" />
                  <HBox prefHeight="100.0" prefWidth="375.0">
                     <children>
                        <Button fx:id="btn_manage" contentDisplay="TOP" mnemonicParsing="false" prefHeight="100.0" prefWidth="125.0" style="-fx-background-color: #004e92;" text="Quản lý" textFill="WHITE">
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <graphic>
                              <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../asset/icons8_user_groups_64px_1.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="btn_stat" contentDisplay="TOP" mnemonicParsing="false" prefHeight="100.0" prefWidth="125.0" style="-fx-background-color: #004e92;" text="Thống kê" textFill="WHITE">
                           <graphic>
                              <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../asset/icons8_overview_64px_1.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="btn_logout" contentDisplay="TOP" mnemonicParsing="false" prefHeight="100.0" prefWidth="125.0" style="-fx-background-color: #004e92;" text="Đăng xuất" textFill="WHITE">
                           <graphic>
                              <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../asset/icons8_logout_rounded_up_64px_1.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial Bold" size="18.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <StackPane fx:id="pane_main" prefHeight="500.0" prefWidth="800.0" />
         </children>
      </VBox>
   </children>
